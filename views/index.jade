	canvas#draw.draw(width=500, height=400)




script(type="text/javascript")
	
	var x;
	var y;
	

	
	function circle(x,y){
		$("canvas.draw").drawEllipse({
			fillStyle: "black",
			x: x, y: y,
			width: 100, height: 100,
			fromCenter:true
		});
	};
	
	$("#draw").bind('click',function(e){
	
			x = e.pageX - this.offsetLeft;
			y = e.pageY - this.offsetTop;
		
		$("#text").text(x +', '+y);
		
		circle(x, y);
	});
		


	

	
	
	

		
